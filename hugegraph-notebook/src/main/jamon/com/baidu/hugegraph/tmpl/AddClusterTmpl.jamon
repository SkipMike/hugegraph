<div class="container">
    <div class="page-header"><h1>Add Cluster</h1></div>
    <form class="form-horizontal">
        <div class="form-group">
            <label for="inputClusterName" class="col-sm-2 control-label">Cluster Name</label>
            <div class="col-sm-6">
                <input type="email" class="form-control" id="inputClusterName" placeholder="hugegraph">
            </div>
        </div>
        <div class="form-group">
            <label for="inputConnectionUrl" class="col-sm-2 control-label">Connection Url</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputConnectionUrl" placeholder="...">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>


</div>

